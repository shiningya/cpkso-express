extends layout

block title
  title= '新能源电动车新闻网、电动车配件咨询网-产品快搜新能源电动车'
  meta(name="keywords", content="新能源电动车新闻网、电动车配件咨询网")
  meta(name="description", content="新能源电动车新闻网是产品快搜新能源电动车网旗下新闻资讯频道，汇集了国内外新能源电动车行业市场行情、电动车企业动态、新能源电动车汗液政策法规等各类资讯，为用户提供最新、最全面新能源行业信息及最前沿的新能源电动汽车技术资讯。")
append link
  link(rel="stylesheet", href="http://ev.cpkso.com/style/css/news.css")
  link(rel="stylesheet", href="http://ev.cpkso.com/style/css/company.css")
block content
  .main-body
    .header-wrapper(style='height:300px;')
      #banner.header-banner
        a(href='http://ev.cpkso.com/news/:#{banner[0].id}')
          img(src='http://ev.cpkso.com/adsPath/#{banner[0].pic}')
    .content-container
      .content-left
        .hot-sell.product-container
          h2.product-list-title 全部
          ul#atabs.nav.nav-tabs
            li
              a 分类：
            block newsNav
              li
                a.tab(href='/news/xinche/') 新车
              li
                a.tab(href='/news/jishu/') 技术
              li
                a.tab(href='/news/hangye/') 行业
              li
                a.tab(href='/news/zhengce/') 政策
              li
                a.tab(href='/news/daogou/') 导购
              li
                a.tab(href='/news/yongche/') 用车
              li
                a.tab(href='/news/pinpai/') 品牌
          #artlist.tab-content
            #new-car.tab-pane.active
              .news-container
                each item in news
                  .news-item.clearfix
                    .news-item-image
                      a(href='#{item.content}')
                        img(src='http://ev.cpkso.com/uploadPath/#{item.thumb}')
                      span.tag #{item.artCt.name}
                    .news-item-info
                      h4.news-item-title
                        a(href='#{item.content}') #{item.title}
                      p.news-item-summary
                      .news-item-footer
                        .news-time #{item.publish_time}
        .page-wrapper.clearfix
          .pagination.clearfix
      .content-right
        #newsad.right4
          #newsA.ad-item(style='margin-top:20px;')
            a(href='/car/#{promo1[0].car.id}',target='_blank')
              img(src='http://ev.cpkso.com/adsPath/#{promo1[0].pic}')
          .recommendRead
            a 推荐阅读
          ul#newslist.list-unstyled.zixun-item
            each item in promo2
              li
                a(href='/news/#{item.article.content}',target='_blank')
                  img(src='http://ev.cpkso.com/adsPath/#{item.pic}')
                  span #{item.article.title}
        #aditem.right3
          #newsB.ad-item
            a(href='/car/#{promo3[0].car.id}',target='_blank')
              img(src='http://ev.cpkso.com/adsPath/#{promo3[0].pic}')
          .recommendRead
            a 最新车型
          ul#newslistB.list-unstyled.zixun-item
            each item in promo4
              li
                a(href='/car/#{item.car.id}',target='_blank')
                  img(src='http://ev.cpkso.com/adsPath/#{item.pic}')
                  span #{item.car.name}
                  b #{item.car.params[0].price}
        #btad.ad-item
          a(href='/car/#{promo5[0].car.id}',target='_blank')
            img(src='http://ev.cpkso.com/adsPath/#{promo5[0].pic}')
append script
  script(src='http://ev.cpkso.com/style/js/lib/jquery.page.js')
  script.
    $('.pagination').Mpage({
      pageCount: #{pageinfo.maxPageNo},
      current: #{pageinfo.pageNo},
      mclick: function(p){
        //- console.log(p);
      }
    });

