    .product-release.clearfix
      .form-wrapper
        form#needForm.form-horizontal(name='needForm' method='post' action='require_add' enctype='multipart/form-data')
          .form-group.clearfix
            label.col-sm-3.control-label(for='pname') 产品名称
            .col-sm-8
              input#pname.form-control(type='text',name='require.title')
          .form-group.clearfix
            label.col-sm-3.control-label 产品分类
            .col-sm-4
              select#s_main.form-control(name='require.category.id')
                option(value='1') 整车
                option(value='2') 配件
            .col-sm-4
              select#s_sub.form-control(name='require.category.id')
                option(value='3') 电动乘用车
                option(value='4') 电动客车
                option(value='5') 微型电动车
          .form-group.clearfix
            label.col-sm-3.control-label 选择省市
