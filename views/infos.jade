                option(value="湖南") 湖南
                option(value="广东") 广东
                option(value="广西") 广西
                option(value="海南") 海南
                option(value="四川") 四川
                option(value="贵州") 贵州
                option(value="云南") 云南
                option(value="西藏") 西藏
