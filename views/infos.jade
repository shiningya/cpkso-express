                option(value='ENTERPRISE') 企业采购
                option(value='PERSONAL') 个人采购
            .col-sm-4
              input.form-control(type='number',name='require.number',placeholder='填写数量')
          .form-group.clearfix
            label.col-sm-3.control-label 联系人
            .col-sm-8
              input#uname.form-control(type='text',name='require.name')
          .form-group.clearfix
