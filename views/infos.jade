          .form-group.clearfix
            label.col-sm-3.control-label(for='inputEmail3') 邮箱
            .col-sm-8
              input#inputEmail3.form-control(type='email',name='require.email')
          .form-group.clearfix
            .col-sm-offset-3.col-sm-8
              button.release-btn(type='submit',onClick='return check()') 发布需求
        img(src='/img/icon/release.png')
      .product-release-list
        ul
        each info in infos
          li.list-item
            a(href='/infos/#{info.id}')
              if info.pic_thumb
                img(src='http://localhost:8080/ev/requirePath/#{info.pic_thumb}')
              else
                img(src='http://localhost:8080/ev/img/no.jpg')
            .product-detail
              a.desc(href='/infos/#{info.id}') #{info.title}
              ul
                li
                  dt 类型：
                  dd #{info.category.name}
                li
                  dt 采购数量：
                  if info.buyerType==='ENTERPRISE'
                    dd 【企业采购】#{info.number}台
                  else if info.buyerType==='PERSONAL'
                    dd 【个人采购】#{info.number}台
                li
                  dt 联系人：
                  dd #{info.name}
                li
                  dt 所在地：
                  dd #{info.city}
                li
                  dt 截止日期：
                  dd #{info.expire_date}
                li
                  a.a_post(href='/infos/#{info.id}') 点击查看详情>>
      .page-wrapper
